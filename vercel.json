{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/games/seed",
      "dest": "backend/main.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/daily-job",
      "dest": "backend/main.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/main.js",
      "methods": ["GET", "PUT", "PATCH", "DELETE", "OPTIONS"]
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "file:./dev.db"
  }
}